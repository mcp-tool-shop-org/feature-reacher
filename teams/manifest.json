{
  "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.16/MicrosoftTeams.schema.json",
  "manifestVersion": "1.16",
  "version": "1.0.0",
  "id": "{{TEAMS_APP_ID}}",
  "packageName": "com.mcptoolshop.featurereacher",
  "developer": {
    "name": "mcp-tool-shop",
    "websiteUrl": "https://feature-reacher.example",
    "privacyUrl": "https://feature-reacher.example/privacy",
    "termsOfUseUrl": "https://feature-reacher.example/terms"
  },
  "icons": {
    "color": "color.png",
    "outline": "outline.png"
  },
  "name": {
    "short": "Feature-Reacher",
    "full": "Feature-Reacher: Adoption Risk Audits"
  },
  "description": {
    "short": "Surface underutilized features before they become technical debt.",
    "full": "Feature-Reacher analyzes your product documentation (release notes, help articles, FAQs) and identifies features at risk of low adoption. Get evidence-backed diagnoses, track trends over time, and export stakeholder-ready reports. No analytics integration requiredâ€”works with what you already have."
  },
  "accentColor": "#2563EB",
  "configurableTabs": [
    {
      "configurationUrl": "https://feature-reacher.example/teams/config",
      "canUpdateConfiguration": true,
      "scopes": ["team", "groupchat"],
      "sharePointPreviewImage": "https://feature-reacher.example/teams/preview.png",
      "supportedSharePointHosts": ["sharePointFullPage", "sharePointWebPart"]
    }
  ],
  "staticTabs": [
    {
      "entityId": "featurereacher-demo",
      "name": "Demo Audit",
      "contentUrl": "https://feature-reacher.example/teams/tab?view=demo",
      "websiteUrl": "https://feature-reacher.example/demo",
      "scopes": ["personal"]
    },
    {
      "entityId": "featurereacher-app",
      "name": "Feature-Reacher",
      "contentUrl": "https://feature-reacher.example/teams/tab",
      "websiteUrl": "https://feature-reacher.example",
      "scopes": ["personal"]
    }
  ],
  "permissions": ["identity", "messageTeamMembers"],
  "validDomains": [
    "feature-reacher.example",
    "*.feature-reacher.example"
  ],
  "webApplicationInfo": {
    "id": "{{AAD_APP_ID}}",
    "resource": "api://feature-reacher.example/{{AAD_APP_ID}}"
  },
  "showLoadingIndicator": true,
  "isFullScreen": false,
  "defaultInstallScope": "personal",
  "defaultGroupCapability": {
    "team": "tab",
    "groupchat": "tab"
  },
  "localizationInfo": {
    "defaultLanguageTag": "en-us"
  }
}
